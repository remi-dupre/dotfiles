# Sound
set $notify_sound ~/.config/i3/notifs/sound
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 4+ unmute ; $notify_sound"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 4- unmute ; $notify_sound"
bindsym XF86AudioMute exec "amixer -q sset Master,0 toggle ; amixer -q sset Headphone,0 unmute ; amixer -q sset Speaker,0 unmute ; amixer -q sset PCM,0 unmute ; $notify_sound"

# MPD controls
