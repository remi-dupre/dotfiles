set $main_status /home/remi/code/bumblebee-status/bumblebee-status \
  -m title spacer spacer progress spacer spacer traffic cpu spacer spacer spacer amixer brightness battery spacer spacer spacer datetime spacer \
  -p interval=1 spacer.theme.bg=\#002b36 datetime.format=" %A %d %B %Y - %H:%M" \
    root.path=/ home.path=/home data.path=/data root.format=" root {used} / {size}" home.format=" home {used} / {size}" data.format=" data {used} / {size}" \
    traffic.showname=False \
    progress.placeholder="" progress.format="{cmd} {bar} ({time})" progress.baremptychar="--" \
  -t custom

bar {
  i3bar_command i3bar
  status_command $main_status
  position top
  tray_output primary
  colors {
    statusline #002b36
    background #002b36
    focused_workspace #181818 #181818 #FFFFFF
    inactive_workspace #002b36 #002b36 #AAAAAA
  }
}

